<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:motion="http://schemas.android.com/apk/res-auto">
    <Transition
            motion:constraintSetEnd="@+id/pollEndScene"
            motion:constraintSetStart="@+id/pollStartScene"
            motion:duration="800">

        <KeyFrameSet>
            <KeyAttribute
                    android:alpha="1"
                    motion:framePosition="0"
                    motion:motionTarget="@id/tvPollTitle" />
            <KeyAttribute
                    android:alpha="0"
                    motion:framePosition="10"
                    motion:motionTarget="@id/tvPollTitle" />
            <KeyAttribute
                    android:alpha="1"
                    motion:framePosition="0"
                    motion:motionTarget="@id/ivDismissPoll" />
            <KeyAttribute
                    android:alpha="0"
                    motion:framePosition="10"
                    motion:motionTarget="@id/ivDismissPoll" />
            <KeyAttribute
                    android:alpha="0"
                    motion:framePosition="100"
                    motion:motionTarget="@id/ivDismissPoll" />
        </KeyFrameSet>
    </Transition>
    <ConstraintSet android:id="@+id/pollStartScene">

        <Constraint
                android:id="@+id/pollPopupLayout"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:visibility="visible"
                motion:layout_constraintBottom_toBottomOf="@+id/tvPollTitle"
                motion:layout_constraintLeft_toLeftOf="parent"
                motion:layout_constraintRight_toRightOf="parent"
                motion:layout_constraintTop_toTopOf="@+id/pollAnnouncement"
                motion:visibilityMode="ignore" />

        <Constraint
                android:id="@+id/pollAnnouncement"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="30dp"
                android:paddingTop="0dp"
                motion:layout_constraintBottom_toTopOf="@+id/tvPollTitle"
                motion:layout_constraintLeft_toRightOf="@+id/ic_poll_hor"
                motion:layout_constraintTop_toBottomOf="@+id/tvBroadcastedBy"
                motion:visibilityMode="ignore" />

        <Constraint
                android:id="@+id/tvPollTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="10dp"
                motion:layout_constraintLeft_toRightOf="@+id/ic_poll_hor"
                motion:layout_constraintRight_toLeftOf="@+id/ivDismissPoll"
                motion:layout_constraintTop_toBottomOf="@+id/pollAnnouncement"
                motion:visibilityMode="ignore" />

        <Constraint
                android:id="@+id/ic_poll_hor"
                android:layout_width="40dp"
                android:layout_height="24dp"
                android:layout_marginLeft="10dp"
                motion:layout_constraintBottom_toBottomOf="@+id/pollPopupLayout"
                motion:layout_constraintLeft_toLeftOf="@+id/pollPopupLayout"
                motion:layout_constraintTop_toTopOf="@+id/pollAnnouncement"
                motion:visibilityMode="ignore" />

        <Constraint
                android:id="@+id/ivDismissPoll"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginRight="10dp"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_close"
                motion:layout_constraintBottom_toBottomOf="@+id/pollPopupLayout"
                motion:layout_constraintRight_toRightOf="@+id/pollPopupLayout"
                motion:layout_constraintTop_toTopOf="@id/pollPopupLayout"
                motion:visibilityMode="ignore" />

        <Constraint
                android:id="@+id/divider"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="20dp"
                motion:layout_constraintEnd_toEndOf="parent"
                motion:layout_constraintStart_toStartOf="parent"
                motion:layout_constraintTop_toBottomOf="@id/pollPopupLayout" />

        <Constraint
                android:id="@+id/bottomLayout"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@drawable/rounded_gray_bg"
                android:elevation="5dp"
                android:visibility="gone"
                motion:layout_constraintBottom_toBottomOf="parent"
                motion:layout_constraintEnd_toEndOf="parent"
                motion:layout_constraintStart_toStartOf="parent"
                motion:layout_constraintTop_toTopOf="parent"
                motion:visibilityMode="ignore" />

        <Constraint
                android:id="@+id/ll_wrapper"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/ant_bg_color"
                android:elevation="6dp"
                android:orientation="horizontal"
                motion:layout_constraintBottom_toBottomOf="parent"
                motion:layout_constraintStart_toStartOf="parent"
                motion:visibilityMode="ignore" />

    </ConstraintSet>

    <ConstraintSet android:id="@+id/pollEndScene">
        <Constraint
                android:id="@+id/pollPopupLayout"
                android:layout_width="0dp"
                android:layout_height="0dp"
                motion:layout_constraintBottom_toBottomOf="@+id/pollAnnouncement"
                motion:layout_constraintLeft_toLeftOf="@+id/ic_poll_hor"
                motion:layout_constraintRight_toRightOf="@+id/pollAnnouncement"
                motion:layout_constraintTop_toTopOf="@+id/pollAnnouncement"
                motion:visibilityMode="ignore" />

        <Constraint
                android:id="@+id/pollAnnouncement"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:paddingTop="6dp"
                android:paddingRight="6dp"
                android:paddingBottom="0dp"
                motion:layout_constraintBottom_toBottomOf="@+id/ivUserPhoto"
                motion:layout_constraintRight_toRightOf="parent"
                motion:layout_constraintTop_toTopOf="@+id/ivUserPhoto"
                motion:visibilityMode="ignore" />

        <Constraint
                android:id="@+id/tvPollTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="4dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="10dp"
                android:paddingBottom="10dp"
                android:visibility="gone"
                motion:layout_constraintLeft_toRightOf="@+id/ic_poll_hor"
                motion:layout_constraintRight_toLeftOf="@+id/ivDismissPoll"
                motion:layout_constraintTop_toBottomOf="@+id/pollAnnouncement"
                motion:visibilityMode="ignore" />

        <Constraint
                android:id="@+id/ic_poll_hor"
                android:layout_width="20dp"
                android:layout_height="12dp"
                android:layout_marginRight="6dp"
                motion:layout_constraintBottom_toBottomOf="@+id/pollAnnouncement"
                motion:layout_constraintRight_toLeftOf="@+id/pollAnnouncement"
                motion:layout_constraintTop_toTopOf="@+id/pollAnnouncement"
                motion:visibilityMode="ignore" />

        <Constraint
                android:id="@+id/ivDismissPoll"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginRight="10dp"
                android:alpha="0"
                android:visibility="gone"
                motion:layout_constraintBottom_toBottomOf="@+id/pollPopupLayout"
                motion:layout_constraintRight_toRightOf="@+id/pollPopupLayout"
                motion:layout_constraintTop_toTopOf="@id/pollPopupLayout"
                motion:visibilityMode="ignore" />

        <Constraint
                android:id="@+id/divider"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="20dp"
                motion:layout_constraintEnd_toEndOf="parent"
                motion:layout_constraintStart_toStartOf="parent"
                motion:layout_constraintTop_toBottomOf="@id/tvBroadcastedBy" />

        <Constraint
                android:id="@+id/bottomLayout"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@drawable/rounded_gray_bg"
                android:elevation="5dp"
                android:visibility="gone"
                motion:layout_constraintBottom_toBottomOf="parent"
                motion:layout_constraintEnd_toEndOf="parent"
                motion:layout_constraintStart_toStartOf="parent"
                motion:layout_constraintTop_toTopOf="parent"
                motion:visibilityMode="ignore" />

        <Constraint
                android:id="@+id/ll_wrapper"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/ant_bg_color"
                android:elevation="6dp"
                android:orientation="horizontal"
                motion:layout_constraintBottom_toBottomOf="parent"
                motion:layout_constraintStart_toStartOf="parent"
                motion:visibilityMode="ignore" />
    </ConstraintSet>
</MotionScene>