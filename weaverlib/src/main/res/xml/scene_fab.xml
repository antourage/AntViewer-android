<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
            motion:constraintSetStart="@+id/start"
            motion:constraintSetEnd="@+id/end"
            motion:duration="2000">
        <OnSwipe
                motion:touchAnchorId="@+id/fabExpantion"
                motion:touchAnchorSide="right"
                motion:dragDirection="dragRight" />
    </Transition>

    <ConstraintSet android:id="@+id/start">
        <Constraint
                android:id="@+id/fabExpantion"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="16dp"
                android:visibility="gone"
                motion:layout_constraintBottom_toBottomOf="parent"
                motion:layout_constraintTop_toTopOf="parent"
                motion:layout_constraintEnd_toEndOf="parent"/>
        <Constraint
            android:id="@+id/tvStreamName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:visibility="gone"
            motion:layout_constraintEnd_toEndOf="@id/fabExpantion"
            motion:layout_constraintTop_toTopOf="@id/fabExpantion"
            />
        <Constraint
                android:id="@+id/tvViewers"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:visibility="gone"
                motion:layout_constraintEnd_toEndOf="@id/fabExpantion"
                motion:layout_constraintTop_toTopOf="@id/fabExpantion"
        />
        <Constraint
                android:id="@+id/tvStreamTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:visibility="gone"
                motion:layout_constraintEnd_toEndOf="@id/fabExpantion"
                motion:layout_constraintTop_toTopOf="@id/fabExpantion"
        />

    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
        <Constraint
                android:id="@+id/fabExpantion"
                android:layout_width="276dp"
                android:layout_height="64dp"
                android:layout_marginEnd="16dp"

                motion:layout_constraintBottom_toBottomOf="parent"
                motion:layout_constraintTop_toTopOf="parent"
                motion:layout_constraintEnd_toEndOf="parent"
                 />
        <Constraint
                android:id="@+id/tvStreamName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="visible"
                motion:layout_constraintTop_toTopOf="@+id/fabExpantion"
                motion:layout_constraintStart_toStartOf="@+id/fabExpantion"
        />
        <Constraint
                android:id="@+id/tvViewers"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="visible"
                motion:layout_constraintTop_toTopOf="@+id/fabExpantion"
                motion:layout_constraintEnd_toEndOf="@+id/fabExpantion"
        />
        <Constraint
                android:id="@+id/tvStreamTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="visible"
                motion:layout_constraintTop_toBottomOf="@+id/tvStreamName"
                motion:layout_constraintStart_toStartOf="@+id/fabExpantion"
        />
    </ConstraintSet>


</MotionScene>