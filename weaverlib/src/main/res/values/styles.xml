<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="PlayerControlsTxt">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/rounded_semitransparent_bg</item>
        <item name="android:fontFamily">@font/roboto_condensed_bold</item>
        <item name="android:gravity">center</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">11sp</item>
    </style>

    <style name="PlayBtn">
        <item name="android:layout_width">78dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:scaleType">fitXY</item>
        <item name="android:padding">10dp</item>
        <item name="android:background">@drawable/bg_rounded_corners_dark_gray_a40</item>
    </style>

    <style name="PlayerNavigationBtn">
        <item name="android:layout_width">39dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:background">@drawable/bg_rounded_corners_dark_gray_a40</item>
        <item name="android:padding">5dp</item>
        <item name="android:scaleType">fitXY</item>
        <item name="android:layout_margin">12dp</item>
    </style>

    <style name="Title">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">30dp</item>
        <item name="android:layout_marginRight">30dp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:fontFamily">@font/roboto_condensed_regular</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">28sp</item>
    </style>

    <style name="AppTheme.PinkAccent">
        <item name="colorAccent">@color/pink</item>
    </style>

    <style name="AlertDialogTheme" parent="ThemeOverlay.AppCompat.Dialog.Alert">
        <item name="android:buttonBarNeutralButtonStyle">@style/PositiveButtonStyle</item>
        <item name="android:buttonBarNegativeButtonStyle">@style/PositiveButtonStyle</item>
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
        <item name="colorAccent">@color/pink</item>
    </style>

    <style name="PositiveButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/pink</item>
    </style>
</resources>