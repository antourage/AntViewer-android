<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tool="http://schemas.android.com/tools"
              android:layout_marginBottom="16dp"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">
    <TextView
            android:id="@+id/tvAnswer"
            android:textColor="@android:color/white"
            tool:text="SomText"
            android:textSize="14sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <TextView
                android:id="@+id/tvPollLength"
                android:layout_width="1dp"
                tool:layout_width="100dp"
                android:layout_marginTop="4dp"
                android:background="@color/bleak_pink"
                android:layout_height="12dp"
                android:maxWidth="326dp"/>
        <TextView
                android:id="@+id/tvAnswerPercentage"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:layout_marginStart="4dp"
                android:gravity="center_vertical"
                android:layout_width="40dp"
                android:textColor="@android:color/white"/>
    </LinearLayout>
</LinearLayout>