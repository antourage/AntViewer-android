<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg_color">

    <ImageView
            android:id="@+id/ic_poll_hor"
            android:layout_width="40dp"
            android:layout_height="24dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:layout_weight="1"
            android:src="@drawable/ic_poll_horizontal"
            app:layout_constraintBottom_toBottomOf="@+id/pollTitle"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="@+id/pollTitle"
            tools:ignore="ContentDescription" />

    <TextView
            android:id="@+id/pollTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="20dp"
            android:ellipsize="end"
            android:fontFamily="@font/roboto_condensed_regular"
            android:includeFontPadding="false"
            android:maxLines="4"
            android:textColor="@android:color/white"
            android:textSize="22sp"
            app:layout_constraintLeft_toRightOf="@+id/ic_poll_hor"
            app:layout_constraintRight_toLeftOf="@+id/ivDismissPoll"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="New interesting poll" />

    <ImageButton
            android:id="@+id/ivDismissPoll"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginRight="20dp"
            android:background="@android:color/transparent"
            android:padding="20dp"
            android:src="@drawable/ic_close"
            app:layout_constraintBottom_toBottomOf="@+id/ic_poll_hor"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/ic_poll_hor"
            tools:ignore="ContentDescription" />

    <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="20dp"
            android:background="@color/light_gray_transparent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/pollTitle" />

    <android.support.v7.widget.RecyclerView
            android:id="@+id/rvAnswers"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toTopOf="@+id/dividerBottom"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/divider"
            tools:itemCount="40"
            tools:listitem="@layout/item_unanswered_poll" />

    <View
            android:id="@+id/dividerBottom"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="20dp"
            android:background="@color/light_gray_transparent"
            app:layout_constraintBottom_toTopOf="@+id/labelTotalAnswers"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" />

    <TextView
            android:id="@+id/labelTotalAnswers"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="20dp"
            android:fontFamily="@font/roboto_condensed_regular"
            android:text="@string/ant_total_answers"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            tools:ignore="RtlSymmetry" />

    <TextView
            android:id="@+id/tvTotalAnswers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:fontFamily="@font/roboto_condensed_regular"
            android:paddingEnd="20dp"
            android:paddingRight="20dp"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="@+id/labelTotalAnswers"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/labelTotalAnswers"
            tools:ignore="RtlSymmetry"
            tools:text="25" />

</android.support.constraint.ConstraintLayout>