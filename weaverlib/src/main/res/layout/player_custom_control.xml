<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/semitransparent"
        android:elevation="6dp">

    <ImageButton
            android:id="@+id/ivClose"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:background="@drawable/image_btn_bg"
            android:src="@drawable/ic_close"
            app:layout_constraintBottom_toBottomOf="@+id/llTopLeftLabels"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/llTopLeftLabels" />

    <LinearLayout
            android:id="@+id/llTopLeftLabels"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="12dp"
            android:orientation="horizontal"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        <TextView
                android:id="@+id/txtStatus"
                style="@style/PlayerControlsTxt"
                android:background="@drawable/bg_rounded_corners_pink"
                android:text="@string/live"
                android:textAllCaps="true"
                android:visibility="gone" />

        <TextView
                android:id="@+id/tvWasLive"
                style="@style/PlayerControlsTxt"
                android:layout_marginLeft="4dp"
                tools:text="12:45" />

        <TextView
                android:id="@+id/txtNumberOfViewers"
                style="@style/PlayerControlsTxt"
                android:layout_marginLeft="4dp"
                android:drawableStart="@drawable/ic_watcher_12dp"
                android:drawablePadding="4dp"
                tools:text="6,385" />
    </LinearLayout>

    <ImageButton
            android:id="@+id/exo_play"
            style="@style/PlayBtn"
            android:src="@drawable/ic_play_arrow"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
            android:id="@+id/exo_pause"
            style="@style/PlayBtn"
            android:src="@drawable/ic_pause"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    <ImageView
            android:id="@+id/ivScreenSize"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginRight="12dp"
            android:layout_marginBottom="12dp"
            android:background="@drawable/ic_full_screen"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent" />

    <include
            layout="@layout/controller_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/llTopLeftLabels" />
</android.support.constraint.ConstraintLayout>