<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        android:id="@+id/pollPopupLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_green_bg"
        android:orientation="horizontal"
        android:elevation="4dp"
        android:visibility="gone"
        tools:visibility="visible"
        xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools"
        >
    <ImageView
            android:id="@+id/ic_poll_hor"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:layout_margin="8dp"
            android:src="@drawable/ic_poll_white_transparent"
            tools:ignore="ContentDescription"/>
    <LinearLayout
            android:orientation="vertical"
            android:layout_weight="8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <TextView
                android:id="@+id/pollAnnouncement"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/new_poll"
                android:textSize="14sp"
                android:layout_marginTop="8dp"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="12dp"
                android:textColor="@android:color/white"
        />
        <TextView
                android:id="@+id/tvPollTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="12dp"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                tools:text="New interesting poll"
        />
    </LinearLayout>
    <ImageButton
            android:id="@+id/ivDismissPoll"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginTop="4dp"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_close"
    />
</LinearLayout>