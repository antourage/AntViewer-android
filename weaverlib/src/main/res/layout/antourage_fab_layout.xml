<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools" android:orientation="vertical"
                                                   android:clipChildren="false"
                                                   android:clipToPadding="false"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="wrap_content">
    <com.antourage.weaverlib.ui.fab.BadgeFab
            android:id="@+id/floatingActionButton"
            android:layout_width="68dp"
            android:layout_height="68dp"
            android:src="@drawable/ic_icon_logo"
            android:background="@color/bg_color_widget"
            android:layout_margin="20dp"
            app:fabSize="normal"
            app:borderWidth="0dp"
            app:badgeBackgroundColor="@color/pink"
            app:badgeTextColor="@android:color/white"
            app:badgePosition="RightTop"
            android:backgroundTint="@color/bg_color_widget"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />

    <com.antourage.weaverlib.ui.fab.MotionOverlayView
            android:id="@+id/motionOverlayView"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="20dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/floatingActionButton"
    />

</android.support.constraint.ConstraintLayout>