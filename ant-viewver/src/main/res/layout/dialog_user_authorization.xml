<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/ant_white"
        app:cardCornerRadius="2dp"
        app:cardElevation="20dp">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:animateLayoutChanges="true">

        <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/ivSetUserPhoto"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_marginLeft="20dp"
                android:src="@drawable/ic_user_grayed"
                app:layout_constraintBottom_toBottomOf="@+id/txtLabelDefaultName"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="@+id/etDisplayName" />

        <ImageView
                android:id="@+id/ivAddPhotoBadge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/add_badge_pink"
                app:layout_constraintCircle="@id/ivSetUserPhoto"
                app:layout_constraintCircleAngle="45"
                app:layout_constraintCircleRadius="17dp" />

        <EditText
                android:id="@+id/etDisplayName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="40dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="20dp"
                android:backgroundTint="@color/ant_color_dark_gray_text_a10"
                android:fontFamily="@font/roboto_condensed_regular"
                android:hint="@string/ant_type_your_display_name"
                android:maxLength="50"
                android:paddingLeft="0dp"
                android:textColor="@color/ant_color_dark_gray_text_a60"
                android:textColorHint="@color/ant_color_dark_gray_text_a60"
                android:textSize="18sp"
                app:layout_constraintBottom_toTopOf="@+id/btnCancel"
                app:layout_constraintLeft_toRightOf="@+id/ivSetUserPhoto"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_goneMarginBottom="20dp" />

        <TextView
                android:id="@+id/btnCancel"
                android:layout_width="144dp"
                android:layout_height="44dp"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/bg_light_gray_radius_2dp"
                android:fontFamily="@font/roboto_condensed_bold"
                android:gravity="center"
                android:text="@string/ant_cancel"
                android:textAllCaps="true"
                android:textColor="@color/ant_color_dark_gray_text"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@+id/btnConfirm" />

        <TextView
                android:id="@+id/btnConfirm"
                android:layout_width="186dp"
                android:layout_height="44dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/bg_confirm_btn"
                android:enabled="false"
                android:fontFamily="@font/roboto_condensed_bold"
                android:gravity="center"
                android:text="@string/ant_confirm"
                android:textAllCaps="true"
                android:textColor="@color/ant_white"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@+id/btnCancel"
                app:layout_constraintRight_toRightOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>