<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/exo_controller"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:animateLayoutChanges="true"
        android:background="@color/ant_dark_transparent">

    <LinearLayout
            android:id="@+id/llTopLeftLabels"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="12dp"
            android:orientation="horizontal"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/player_control_header">

        <!--        this TextView's text value is set buy exo player lib, that is why-->
        <!--        you should not change its id-->
        <TextView
                android:id="@+id/exo_duration"
                style="@style/PlayerControlsTxt"
                android:layout_marginLeft="4dp"
                tools:text="12:45" />

        <TextView
                android:id="@+id/txtNumberOfViewers"
                style="@style/PlayerControlsTxt"
                android:layout_marginLeft="4dp"
                android:drawableStart="@drawable/antourage_ic_watcher_12dp"
                android:drawablePadding="4dp"
                tools:text="6,385" />
    </LinearLayout>

    <View
            android:id="@+id/playBtnPlaceholder"
            android:layout_width="70dp"
            android:layout_height="60dp"
            android:elevation="100dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
            android:id="@+id/exo_play"
            style="@style/PlayBtn"
            android:src="@drawable/antourage_ic_play_arrow"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


    <ImageButton
            android:id="@+id/exo_pause"
            style="@style/PlayBtn"
            android:src="@drawable/antourage_ic_pause"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    <ImageView
            android:id="@+id/exo_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:src="@drawable/antourage_ic_skip_next"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/exo_pause"
            app:layout_constraintTop_toTopOf="parent" />

    <ImageView
            android:id="@+id/exo_prev"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="100dp"
            android:src="@drawable/antourage_ic_skip_previous"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/exo_pause"
            app:layout_constraintTop_toTopOf="parent" />

    <ImageView
            android:id="@+id/ivScreenSize"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginRight="12dp"
            android:background="@drawable/antourage_ic_full_screen"
            app:layout_constraintBottom_toTopOf="@+id/exo_progress"
            app:layout_constraintRight_toRightOf="parent" />

    <TextView
            android:id="@+id/exo_position"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:fontFamily="@font/roboto_condensed_regular"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            app:layout_constraintBottom_toTopOf="@+id/exo_progress"
            app:layout_constraintLeft_toLeftOf="parent" />

    <com.google.android.exoplayer2.ui.DefaultTimeBar
            android:id="@+id/exo_progress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:buffered_color="@android:color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:played_color="@color/ant_pink"
            app:scrubber_color="@color/ant_pink"
            app:unplayed_color="@android:color/white" />

    <!--should be shown only in landscape-->
    <include
            android:id="@+id/player_control_header"
            layout="@layout/player_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:visibility="gone"/>
</androidx.constraintlayout.widget.ConstraintLayout>