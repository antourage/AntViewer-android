<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="4dp"
        app:cardElevation="0dp">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:foreground="?android:attr/selectableItemBackgroundBorderless">

        <ImageView
                android:id="@+id/ivCircleOutline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/antourage_ic_color_wheel"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/ivStreamerPicture"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:padding="4dp"
                android:src="@drawable/antourage_ic_default_user"
                app:layout_constraintBottom_toBottomOf="@+id/ivCircleOutline"
                app:layout_constraintEnd_toEndOf="@+id/ivCircleOutline"
                app:layout_constraintStart_toStartOf="@+id/ivCircleOutline"
                app:layout_constraintTop_toTopOf="@+id/ivCircleOutline" />


        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                app:layout_constraintBottom_toBottomOf="@+id/ivCircleOutline"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/ivCircleOutline"
                app:layout_constraintTop_toTopOf="@+id/ivCircleOutline">

            <TextView
                    android:id="@+id/txtStreamerInfo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:fontFamily="sans-serif"
                    android:maxLines="1"
                    tools:text="DR Handball â€¢ 5 min ago"
                    app:layout_constraintVertical_chainStyle="spread"
                    android:textColor="@color/ant_streamer_name_color"
                    android:textSize="12sp"
                    app:layout_constraintBottom_toTopOf="@+id/txtTitle_vod"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            <TextView
                    android:id="@+id/txtTitle_vod"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:ellipsize="end"
                    android:fontFamily="sans-serif-medium"
                    android:maxLines="1"
                    app:layout_constraintVertical_chainStyle="spread"
                    android:textColor="@android:color/white"
                    android:textSize="14sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/txtStreamerInfo"
                    tools:text="Naked players on the field" />

        </androidx.constraintlayout.widget.ConstraintLayout>


        <ImageView
                android:id="@+id/ivThumbnail_vod"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="90dp"
                android:adjustViewBounds="true"
                android:foreground="@drawable/antourage_bg_gradient_bottom"
                android:scaleType="centerCrop"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        <TextView
                android:id="@+id/txtNew"
                style="@style/PlayerControlsTxt2"
                android:layout_margin="6dp"
                android:background="@drawable/antourage_bg_rounded_blue"
                android:text="@string/ant_new"
                android:textAllCaps="true"
                android:visibility="visible"
                app:layout_constraintLeft_toLeftOf="@+id/ivThumbnail_vod"
                app:layout_constraintTop_toTopOf="@+id/ivThumbnail_vod" />

        <TextView
                android:id="@+id/txtWasLive_vod"
                style="@style/PlayerControlsTxt"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                app:layout_constraintLeft_toRightOf="@+id/txtNew"
                app:layout_constraintTop_toTopOf="@+id/ivThumbnail_vod"
                tools:text="20s ago" />

        <TextView
                android:id="@+id/txtDuration"
                style="@style/PlayerControlsTxt2"
                android:layout_margin="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                tools:text="00:01:02" />

        <TextView
                android:id="@+id/txtViewsCount"
                style="@style/PlayerControlsTxt2"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:drawableStart="@drawable/antourage_ic_watcher_12dp"
                android:drawablePadding="4dp"
                app:layout_constraintLeft_toRightOf="@+id/txtDuration"
                app:layout_constraintTop_toTopOf="@+id/ivThumbnail_vod"
                tools:text="6,385" />

        <ProgressBar
                android:id="@+id/watchingProgress"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:max="100"
                android:paddingBottom="4dp"
                android:progressBackgroundTint="@null"
                android:progressTint="@color/ant_pink"
                android:visibility="invisible"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>
