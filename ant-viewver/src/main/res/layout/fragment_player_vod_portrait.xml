<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/constraintLayoutParent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:animateLayoutChanges="true"
        android:background="@color/ant_bg_color">

    <include
            android:id="@+id/vod_header_layout"
            layout="@layout/player_header"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:visibility="visible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.exoplayer2.ui.PlayerView
            android:id="@+id/playerView"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_gravity="top"
            android:animateLayoutChanges="true"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/vod_header_layout"
            app:resize_mode="fit"
            app:use_controller="false" />

    <ProgressBar
            android:id="@+id/vod_player_progress"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="0dp"
            android:layout_height="4dp"
            android:progressDrawable="@drawable/antourage_progress_horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/playerView"
            android:visibility="visible"
            tools:max="100"
            tools:progress="70" />

    <View
            android:id="@+id/viewHelper"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/control_bottom_margin"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/playerView" />

    <ImageView
            android:id="@+id/ivFirstFrame"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_gravity="top"
            android:animateLayoutChanges="true"
            android:scaleType="centerCrop"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="@+id/playerView"
            app:layout_constraintEnd_toEndOf="@id/playerView"
            app:layout_constraintStart_toStartOf="@id/playerView"
            app:layout_constraintTop_toTopOf="@id/playerView" />

    <com.google.android.exoplayer2.ui.PlayerControlView
            android:id="@+id/controls"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:animateLayoutChanges="true"
            android:elevation="10dp"
            app:auto_show="true"
            app:controller_layout_id="@layout/player_custom_controls_vod"
            app:hide_on_touch="true"
            app:layout_constraintBottom_toTopOf="@+id/viewHelper"
            app:layout_constraintEnd_toEndOf="@id/playerView"
            app:layout_constraintStart_toStartOf="@id/playerView"
            app:layout_constraintTop_toTopOf="@id/playerView"
            app:show_buffering="never"
            app:show_timeout="2000" />

    <TextView
            android:id="@+id/txtNumberOfViewers"
            android:layout_width="wrap_content"
            android:layout_height="18dp"
            android:layout_marginStart="6dp"
            android:layout_marginTop="6dp"
            android:elevation="10dp"
            android:background="@drawable/bg_rect_round_3"
            android:backgroundTint="@color/ant_dark_gray_3_a80"
            android:drawableStart="@drawable/antourage_ic_watcher_16dp"
            android:drawablePadding="4dp"
            android:fontFamily="@font/roboto_bold"
            android:gravity="center"
            android:includeFontPadding="false"
            android:paddingEnd="6dp"
            android:paddingStart="6dp"
            android:textColor="@color/ant_white"
            android:textSize="11sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/playerView"
            tools:text="6,385" />

    <ImageView
            android:id="@+id/skipForward"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="200dp"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="@+id/playerView"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/playerView" />

    <ImageView
            android:id="@+id/skipBackward"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="200dp"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="@+id/playerView"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/playerView" />

    <ImageView
            android:id="@+id/ivLoader"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="@id/playerView"
            app:layout_constraintEnd_toEndOf="@id/playerView"
            app:layout_constraintStart_toStartOf="@id/playerView"
            app:layout_constraintTop_toTopOf="@+id/playerView" />

    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/bottomLayout"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/playerView" />

    <com.antourage.weaverlib.other.ui.CustomDrawerLayout
            android:id="@+id/drawerLayout"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@android:color/transparent"
            android:clickable="false"
            android:focusable="false"
            app:layout_constraintBottom_toTopOf="@+id/ll_wrapper"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/playerView">

        <com.google.android.material.navigation.NavigationView
                android:id="@+id/navView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="left"
                android:layout_marginEnd="-65dp"
                android:layout_marginRight="-65dp"
                android:background="@android:color/transparent">

            <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/clNavView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/llNoChat"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent">

                    <include
                            layout="@layout/layout_empty_chat_placeholder"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <com.antourage.weaverlib.other.ui.FadingRecyclerView
                        android:id="@+id/rvMessages"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:clipToPadding="false"
                        android:fadingEdge="horizontal"
                        android:fadingEdgeLength="150dp"
                        android:fillViewport="false"
                        android:requiresFadingEdge="vertical"
                        tools:listitem="@layout/item_message_portrait" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.navigation.NavigationView>

    </com.antourage.weaverlib.other.ui.CustomDrawerLayout>

    <View
            android:id="@+id/dividerChat"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="20dp"
            android:background="@color/ant_light_gray_transparent"
            app:layout_constraintBottom_toTopOf="@+id/ll_wrapper"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    <LinearLayout
            android:id="@+id/ll_wrapper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/ant_bg_color"
            android:orientation="horizontal"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent">

        <EditText
                android:id="@+id/etMessage"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="10"
                android:background="@android:color/transparent"
                android:fontFamily="@font/roboto_condensed_regular"
                android:hint="@string/ant_say_something"
                android:imeOptions="flagNoExtractUi"
                android:paddingLeft="20dp"
                android:textColor="@android:color/white"
                android:textColorHint="@color/ant_light_gray_transparent"
                android:textSize="16sp"
                tools:ignore="RtlSymmetry" />

        <ImageButton
                android:id="@+id/btnSend"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:src="@drawable/antourage_ic_send"
                tools:ignore="ContentDescription" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>