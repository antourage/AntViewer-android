<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
            android:id="@+id/poll_transition"
            motion:constraintSetStart="@+id/start_poll_frag"
            motion:constraintSetEnd="@+id/end_poll_frag"
            motion:duration="500">


        <ConstraintSet android:id="@+id/start_poll_frag">
            <Constraint
                    android:id="@+id/item_poll_guideline"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    motion:layout_constraintGuide_percent="0" />

            <Constraint
                    android:id="@+id/item_poll_fill_color"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:background="@color/state_activated_l_pink_l_grey"
                    motion:layout_constraintBottom_toBottomOf="parent"
                    motion:layout_constraintEnd_toStartOf="@+id/item_poll_guideline"
                    motion:layout_constraintStart_toStartOf="parent"
                    motion:layout_constraintTop_toTopOf="parent" />

            <Constraint
                    android:id="@+id/item_poll_answer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:fontFamily="@font/roboto_bold"
                    android:includeFontPadding="false"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:textAllCaps="false"
                    android:textColor="@color/ant_dark_gray_4"
                    android:textSize="12sp"
                    motion:layout_constrainedWidth="true"
                    motion:layout_constraintBottom_toBottomOf="parent"
                    motion:layout_constraintEnd_toEndOf="parent"
                    motion:layout_constraintHorizontal_bias="0.5"
                    motion:layout_constraintStart_toStartOf="parent"
                    motion:layout_constraintTop_toTopOf="parent" />

            <Constraint
                    android:id="@+id/item_poll_percentage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="12dp"
                    android:fontFamily="@font/roboto_bold"
                    android:includeFontPadding="false"
                    android:textAllCaps="true"
                    android:textColor="@color/state_activated_pink_grey"
                    android:textSize="12sp"
                    android:visibility="invisible"
                    motion:layout_constraintBottom_toBottomOf="parent"
                    motion:layout_constraintEnd_toEndOf="parent"
                    motion:layout_constraintTop_toTopOf="parent" />
        </ConstraintSet>

        <ConstraintSet android:id="@+id/end_poll_frag">
            <Constraint
                    android:id="@+id/item_poll_guideline"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    motion:layout_constraintGuide_percent="0" />

            <Constraint
                    android:id="@+id/item_poll_fill_color"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:background="@color/state_activated_l_pink_l_grey"
                    motion:layout_constraintBottom_toBottomOf="parent"
                    motion:layout_constraintEnd_toStartOf="@+id/item_poll_guideline"
                    motion:layout_constraintStart_toStartOf="parent"
                    motion:layout_constraintTop_toTopOf="parent" />

            <Constraint
                    android:id="@+id/item_poll_answer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:fontFamily="@font/roboto_bold"
                    android:includeFontPadding="false"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:textAllCaps="false"
                    android:textColor="@color/ant_dark_gray_4"
                    android:textSize="12sp"
                    motion:layout_constrainedWidth="true"
                    motion:layout_constraintBottom_toBottomOf="parent"
                    motion:layout_constraintEnd_toStartOf="@+id/item_poll_percentage"
                    motion:layout_constraintHorizontal_bias="0.0"
                    motion:layout_constraintStart_toStartOf="parent"
                    motion:layout_constraintTop_toTopOf="parent" />

            <Constraint
                    android:id="@+id/item_poll_percentage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="12dp"
                    android:fontFamily="@font/roboto_bold"
                    android:includeFontPadding="false"
                    android:textAllCaps="true"
                    android:textColor="@color/state_activated_pink_grey"
                    android:textSize="12sp"
                    android:visibility="visible"
                    motion:layout_constraintBottom_toBottomOf="parent"
                    motion:layout_constraintEnd_toEndOf="parent"
                    motion:layout_constraintTop_toTopOf="parent" />
        </ConstraintSet>

        <ConstraintSet android:id="@+id/end_poll_frag_2">
            <Constraint
                    android:id="@+id/item_poll_guideline"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    motion:layout_constraintGuide_percent="0" />

            <Constraint
                    android:id="@+id/item_poll_fill_color"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:background="@color/state_activated_l_pink_l_grey"
                    motion:layout_constraintBottom_toBottomOf="parent"
                    motion:layout_constraintEnd_toStartOf="@+id/item_poll_guideline"
                    motion:layout_constraintStart_toStartOf="parent"
                    motion:layout_constraintTop_toTopOf="parent" />

            <Constraint
                    android:id="@+id/item_poll_answer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:fontFamily="@font/roboto_bold"
                    android:includeFontPadding="false"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:textAllCaps="false"
                    android:textColor="@color/ant_dark_gray_4"
                    android:textSize="12sp"
                    motion:layout_constrainedWidth="true"
                    motion:layout_constraintBottom_toBottomOf="parent"
                    motion:layout_constraintEnd_toStartOf="@+id/item_poll_percentage"
                    motion:layout_constraintHorizontal_bias="0.0"
                    motion:layout_constraintStart_toStartOf="parent"
                    motion:layout_constraintTop_toTopOf="parent" />

            <Constraint
                    android:id="@+id/item_poll_percentage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="12dp"
                    android:fontFamily="@font/roboto_bold"
                    android:includeFontPadding="false"
                    android:textAllCaps="true"
                    android:textColor="@color/state_activated_pink_grey"
                    android:textSize="12sp"
                    android:visibility="visible"
                    motion:layout_constraintBottom_toBottomOf="parent"
                    motion:layout_constraintEnd_toEndOf="parent"
                    motion:layout_constraintTop_toTopOf="parent" />
        </ConstraintSet>
    </Transition>
</MotionScene>