<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="PlayerControlsTxt">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/antourage_rounded_semitransparent_bg</item>
        <item name="android:fontFamily">@font/roboto_condensed_bold</item>
        <item name="android:gravity">center</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/ant_white</item>
        <item name="android:textSize">11sp</item>
    </style>

    <style name="PlayerControlsTxt2">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/antourage_rounded_semitransparent_bg</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/ant_white</item>
        <item name="android:textSize">11sp</item>
    </style>

    <style name="PlayBtn">
        <item name="android:layout_width">78dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:scaleType">fitXY</item>
        <item name="android:padding">10dp</item>
        <item name="android:background">@drawable/antourage_bg_rounded_corners_dark_gray_a40</item>
    </style>

    <style name="PlayerNavigationBtn">
        <item name="android:layout_width">39dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:background">@drawable/antourage_bg_rounded_corners_dark_gray_a40</item>
        <item name="android:padding">5dp</item>
        <item name="android:scaleType">fitXY</item>
        <item name="android:layout_margin">12dp</item>
    </style>

    <style name="Title">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:ellipsize">end</item>
        <item name="android:fontFamily">@font/roboto_condensed_regular</item>
        <item name="android:textColor">@color/ant_white</item>
        <item name="android:textSize">28sp</item>
    </style>

    <style name="AntTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowAnimationStyle">@style/AntActivityAnimation</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:navigationBarColor">@color/ant_black</item>
    </style>

    <style name="AntActivityAnimation" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/antourage_enter_from_right</item>
        <item name="android:activityOpenExitAnimation">@anim/antourage_exit_to_left</item>
        <item name="android:activityCloseEnterAnimation">@anim/antourage_enter_from_left</item>
        <item name="android:activityCloseExitAnimation">@anim/antourage_exit_to_right</item>
    </style>

    <style name="AlertDialogTheme" parent="ThemeOverlay.AppCompat.Dialog.Alert">
        <item name="android:buttonBarNeutralButtonStyle">@style/PositiveButtonStyle</item>
        <item name="android:buttonBarNegativeButtonStyle">@style/PositiveButtonStyle</item>
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
        <item name="colorAccent">@color/ant_pink</item>
    </style>

    <style name="PositiveButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/ant_pink</item>
    </style>
</resources>