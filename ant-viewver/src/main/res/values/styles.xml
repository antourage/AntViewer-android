<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="PlayerControlsTxt2">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/antourage_rounded_semitransparent_bg</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/ant_white</item>
        <item name="android:textSize">11sp</item>
    </style>

    <style name="AntTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowAnimationStyle">@style/AntActivityAnimation</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:navigationBarColor">@color/ant_black</item>
    </style>

    <style name="AntActivityAnimation" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/antourage_enter_from_right</item>
        <item name="android:activityOpenExitAnimation">@anim/antourage_exit_to_left</item>
        <item name="android:activityCloseEnterAnimation">@anim/antourage_enter_from_left</item>
        <item name="android:activityCloseExitAnimation">@anim/antourage_exit_to_right</item>
    </style>

</resources>